{
  "info": {
    "name": "Invest Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "url": {"raw": "{{base_url}}/api/login", "host": ["{{base_url}}"], "path": ["api","login"]},
        "body": {"mode": "raw", "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@12345\"\n}"}
      }
    },
    {
      "name": "Admin - List Wallets",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {"raw": "{{base_url}}/api/admin/wallets", "host": ["{{base_url}}"], "path": ["api","admin","wallets"]}
      }
    },
    {
      "name": "Admin - Create Wallet",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{base_url}}/api/admin/wallets", "host": ["{{base_url}}"], "path": ["api","admin","wallets"]},
        "body": {"mode": "raw", "raw": "{\n  \"name\": \"USDT ERC20\",\n  \"currency\": \"USDT\",\n  \"network\": \"erc20\",\n  \"address_template\": \"xpubTEST\",\n  \"requires_tag\": false,\n  \"tag_label\": null,\n  \"confirmations\": 12,\n  \"icon_url\": \"https://cdn.example.com/icons/usdt.svg\",\n  \"is_enabled\": true\n}"}
      }
    },
    {
      "name": "Admin - Toggle Wallet",
      "request": {
        "method": "PATCH",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{base_url}}/api/admin/wallets/{{wallet_id}}/toggle", "host": ["{{base_url}}"], "path": ["api","admin","wallets","{{wallet_id}}","toggle"]},
        "body": {"mode": "raw", "raw": "{\n  \"is_enabled\": false\n}"}
      }
    },
    {
      "name": "Admin - Assign Wallet",
      "request": {
        "method": "POST",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {"raw": "{{base_url}}/api/admin/wallets/{{wallet_id}}/assign", "host": ["{{base_url}}"], "path": ["api","admin","wallets","{{wallet_id}}","assign"]}
      }
    },
    {
      "name": "User - List Wallets",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {"raw": "{{base_url}}/api/user/wallets", "host": ["{{base_url}}"], "path": ["api","user","wallets"]}
      }
    },
    {
      "name": "User - Generate Address",
      "request": {
        "method": "POST",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {"raw": "{{base_url}}/api/user/wallets/{{wallet_id}}/generate-address", "host": ["{{base_url}}"], "path": ["api","user","wallets","{{wallet_id}}","generate-address"]}
      }
    },
    {
      "name": "Webhook - Deposit",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "url": {"raw": "{{base_url}}/api/wallets/webhook", "host": ["{{base_url}}"], "path": ["api","wallets","webhook"]},
        "body": {"mode": "raw", "raw": "{\n  \"currency\": \"USDT\",\n  \"network\": \"erc20\",\n  \"txid\": \"0xabc123\",\n  \"from\": \"0xfrom\",\n  \"to\": \"<address_from_generate>\",\n  \"amount\": \"150.00\",\n  \"confirmations\": 12,\n  \"block_time\": \"2025-08-10T12:34:00Z\",\n  \"memo\": null\n}"}
      }
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost"},
    {"key": "token", "value": ""},
    {"key": "wallet_id", "value": "1"}
  ]
}